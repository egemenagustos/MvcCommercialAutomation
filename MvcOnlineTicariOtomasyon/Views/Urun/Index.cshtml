@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
@using (Html.BeginForm("Index","Urun",FormMethod.Get))
            {
                <p>
                    Ürün Adı : @Html.TextBox("p")
                    <input type="submit" value="Ara" />
                </p>
            }
<br />
<table class="table table-bordered">
    <tr>
        <th>Ad</th>
        <th>Marka</th>
        <th>Stok</th>
        <th>Alış Fiyatı</th>
        <th>Satış Fiyatı</th>
        <th>Durum</th>
        <th>Kategori</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Satış Yap</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.UrunAd</td>
            <td>@item.Marka</td>
            <td>@item.Stok</td>
            <td>@item.AlisFiyat</td>
            <td>@item.SatisFiyat</td>
            <td>@item.Durum</td>
            <td>@item.Kategori.KategoriAd</td>
            <td><a href="/Urun/UrunSil/@item.Urunid" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Urun/UrunGetir/@item.Urunid" class="btn btn-outline-success">Güncelle</a></td>
            <td><a href="/Urun/SatisYap/@item.Urunid" class="btn btn-outline-dark">Satış Yap</a></td>
        </tr>
        }
</table>
<a href="/Urun/YeniUrun/" class="btn btn-primary">Yeni Ürün Ekle</a>
<br />


