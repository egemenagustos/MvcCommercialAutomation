@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Personel Adı</th>
        <th>Personel Soyadı</th>
        <th>Departman</th>
        <th>Güncelle</th>
        <th>Satışlar</th>
        <th>Görsel</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Personelid</td>
            <td>@item.PersonelAd</td>
            <td>@item.PersonelSoyad</td>
            <td>@item.Departman.DepartmanAd</td>
            <td><a href="/Personel/PersonelGetir/@item.Personelid" class="btn btn-outline-success">Güncelle</a></td>
            <td><a href="/Personel/PersonelDetay/@item.Personelid" class="btn btn-outline-secondary">Detay</a></td>
            <td><img style="width:70px; height:70px;" src="@item.PersonelGorsel"</td>
        </tr>
    }
</table>
<a href="/Personel/PersonelEkle" class="btn btn-primary">Yeni Personel Ekle</a>

