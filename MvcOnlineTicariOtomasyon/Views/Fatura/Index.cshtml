@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Faturalar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table class="table table-bordered">
    <tr>
        <th>Seri Sıra No</th>
        <th>Tarih</th>
        <th>Saat</th>
        <th>Toplam</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
        <th>Yeni Kalem</th>
    </tr>
    @foreach(var item in Model)
            {
                <tr>
                    <td>@item.FaturaSeriNo @item.FaturaSıraNo</td>
                    <td>@(((DateTime)item.Tarih).ToString("dd-MMM-yyyy"))</td>
                    <td>@item.Saat</td>
                    <td>@item.Toplam</td>
                    <td><a href="/Fatura/FaturaGetir/@item.Faturaid" class="btn btn-outline-success">Güncelle</a></td>
                    <td><a href="/Fatura/FaturaDetay/@item.Faturaid" class="btn btn-outline-secondary">Detaylar</a></td>
                    <td><a href="/Fatura/FaturaDetay/@item.Faturaid" class="btn btn-outline-info">Yeni Kalem</a></td>
                </tr>
            }
</table>

<a href="/Fatura/FaturaEkle" class="btn btn-primary">Yeni Fatura Ekle</a>
<br />
<br />
<button data-toggle="modal" data-target="#modal1" class="btn btn-warning">Popup Penceresi</button>
<div class="modal" id="modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Popup Diyalog Ekranı</h2>
            </div>
            <div class="modal-body">
                <table class="table table-hover">
                    <tr>
                        <td>Seri No</td>
                        <td>Sıra No</td>
                        <td>Tutar</td>
                    </tr>
                    @foreach(var item in Model)
                    {
                    <tr>
                        <td>@item.FaturaSeriNo</td>
                        <td>@item.FaturaSıraNo</td>
                        <td>@item.Toplam</td>
                    </tr>
                    }
                </table>
                <button class="btn btn-outline-danger" data-dismiss="modal">Vazgeç</button>
            </div>
        </div>
    </div>
</div>

